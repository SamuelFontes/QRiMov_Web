@model FavoritoViewModel

<div class="row checkoutForm">
    <h2>Seus Imóveis Favoritos</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Imóvel</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Favorito.FavoritoItems)
            {
                <tr>
                    <td class="text-left"><a asp-controller="Imovel" asp-action="Details" asp-route-ImovelId="@item.Imovel.Id">@item.Imovel.Descricao</a></td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="Favorito" asp-action="RemoverItemDosFavoritos" asp-route-imovelId="@item.Imovel.Id"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right"></td>
                <td class="text-right"></td>
            </tr>
        </tfoot>
    </table>
    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Contato" asp-action="Index">Entrar em Contato</a>
            <a class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Procurar mais Imóveis<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a asp-controller="Imovel" asp-action="List" asp-route-categoria="Venda">Venda</a></li>
                    <li><a asp-controller="Imovel" asp-action="List" asp-route-categoria="Aluguel">Aluguel</a></li>
                </ul>
            </a>
        </div>
    </div>
</div>